<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:layout_marginTop="5dp"
    android:elevation="5dp"
    style="@style/CardViewStyle">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_layout_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_card">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/icon_device"
            android:src="@drawable/ic_baseline_light_mode_24dp_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rowCount="2"
            android:columnCount="1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/icon_device"
            app:layout_constraintBottom_toBottomOf="parent">
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/name_device"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name device"
                android:textColor="@color/white"
                android:layout_marginStart="20dp"
                android:textSize="18sp"
                android:layout_column="0"
                android:layout_row="0"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/value_device"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15Â°C"
                android:textColor="@color/white"
                android:layout_marginStart="20dp"
                android:textSize="14sp"
                android:layout_column="0"
                android:layout_row="1"/>
        </GridLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/status_device"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ON"
            android:textColor="@color/green"
            android:layout_marginEnd="20dp"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>